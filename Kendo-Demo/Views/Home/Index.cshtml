    ViewBag.Title = "Home Page";
}


<!--begin::Post-->
<div class="flex-row-fluid" id="kt_content" style="margin-top: 20px">

    <!--begin::Toolbar-->
    <div class="d-flex flex-wrap flex-stack my-5" >
        <!--begin::Heading-->
        <h2 class="fs-2 fw-semibold my-2" style=" display: flex; align-items: center; ">
            Kendo Topics
        </h2>
        <!--end::Heading-->

    </div>
    <!--end::Toolbar-->
    <!--begin::Row-->
    <div id="TopicsViewList" class="row g-6 g-xl-9" style="margin-top: 52px">


    </div>
    <!--end::Row-->

</div>
<!--end::Post-->


<script src="~/Scripts/Views/Home/View_HomeScript.js"></script>


<script type="text/x-kendo-template" id="topicsTemplate">

    <!--begin::Col-->
