        <!--begin::Card-->
        <a class="card">
            <!--begin::Card header-->
            <div class="card-header">
                <!--begin::Card Title-->
                <div class="card-title m-0">
                    <!--begin::Avatar-->
                    <div class="symbol symbol-50px w-50px bg-light">
                        <img src="/Content/download.png" alt="image" class="p-3" />
                    </div>
                    <!--end::Avatar-->
                </div>
                <!--end::Car Title-->
            </div>
    <br/>
            <!--end:: Card header-->
             <div class="card-body">
                <!--begin::Name-->
                <div class="fs-3 fw-bold text-dark">Kendo Topic #: ID#</div>
                <!--end::Name-->
                <!--begin::Description-->
     <br/>
               <h4 class="fw-bold me-auto px-4 py-3">#: Topic#</h4>
                <!--end::Description-->

            </div>
        </a>
        <!--end::Card-->
    </div>
    <!--end::Col-->

